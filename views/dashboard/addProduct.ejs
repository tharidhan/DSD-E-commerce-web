            <div class="main">
                <div class="container1">
                    <div style="text-align:center;font-family:Verdana; color:#0000ff;font-size: 20px;"><h2 style="margin-top:20px; margin-left:30px">Add Product</h2></div>
                  <form action="/SaveProduct"method="post" style="margin-top:20px ;"enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-25">
                        <label for="modelNo">Model Number</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="modelNo" name="modelNo" maxlength="12" placeholder="Enter Model Number" required>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-25">
                        <label for="brandName">Brand Name</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="brandName" name="brandName"maxlength="12" placeholder="Enter Brand Name" required>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-25">
                        <label for="shortName	">Item Short Name</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="shortName" name="shortName" maxlength="12"placeholder="Enter Item Short Name"required>
                      </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                          <label for="description">Short Description</label>
                        </div>
                        <div class="col-75">
                          <input type="text" id="description" name="description"maxlength="70" placeholder="Enter Description"required >
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-25">
                          <label for="	price">Price</label>
                        </div>
                        <div class="col-75">
                          <input type="text" id="price" name="price"type="text" pattern="\d*"title="Numbers Only" maxlength="7" placeholder="Enter Price" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-25">
                          <label for="sale_price">Discount</label>
                        </div>
                        <div class="col-75">
                          <input type="text" id="discount	"pattern="\d*" maxlength="4" title="Numbers Only" maxlength="7" name="discount" placeholder="Enter Disount" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-25">
                          <label for="quantity">Quantity</label>
                        </div>
                        <div class="col-75">
                          <input type="text" id="quantity" name="quantity"pattern="\d*"maxlength="4" placeholder="Enter Quantity" required>
                          
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-25">
                          <label for="image">Upload Item Image</label>
                        </div>
                
                         <!-- image -->
                        <div class="col-75">
                          <input type="file" name="image" id="image" required/>
                        </div>
                      </div>
                    
                      <div class="row">
                        <div class="col-25">
                          <label for="category">Main catogory</label>
                        </div>
                        <div class="col-75">
                          
                            <select class ="dropdown "name="category" id="category"required>
                                <% result.forEach(function(item) { %>
                                <option value="<%=item.catogory%>"><%=item.catogory%></option>  
                                <% })%>
                            </select>
                        </div>
                      </div> 
           
                      <div class="row">
                        <div class="col-25">
                          <label for="gender">Gender/Stage</label>
                        </div>
                        <div class="col-75">
                          <select class ="dropdown "name="gender" id="gender">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="kids">Kids</option> 
                            <option value="one">None</option>                          
                          </select>
                        </div>                     
                      </div>   

                      <div class="row">
                        <div class="col-25">
                          <label for="customization">Customization</label>
                        </div>
                        <div class="col-75">
                          <select class ="dropdown "name="customization" id="customization">
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>                         
                          </select>
                        </div>                     
                      </div>  

                       <div class="row">
                        <div class="col-25">
                          <label for="mainColor">Main Color</label>
                        </div>
                        <div class="col-75">
                          <select class ="dropdown "name="mainColor" id="mainColor">
                            <option style="background-color: black;color:white" value="black">black</option>
                            <option style="background-color: green;color:white" value="green">green</option>   
                            <option style="background-color: blue;color:white" value="blue">blue</option>
                            <option style="background-color: purple;color:white" value="purple">purple</option>  
                            <option style="background-color: pink;color:white" value="pink">pink</option>
                            <option style="background-color: orange;color:white" value="ornage">ornage</option>  
                            <option style="background-color: red;color:white;" value="red">red</option>
                            <option style="background-color: silver;color:white" value="silver">silver</option>  
                            <option style="background-color: white;color:black" value="white">white</option>
                            <option style="background-color: yellow;color:black" value="yellow">yellow</option>
                            <option style="background-color: white;color:black" value="white">white</option>
                            <option style="background-color: brown;color:white" value="brown">brown</option>                        
                            <option value="none">not of above</option>
                          </select>
                        </div>                     
                      </div>  
                      <div class="row">
                        <div class="col-25"> 
                        </div>
                        <div class="col-75">
                          <div style=" display: inline-block;">
                            <input type="submit" value="Submit" style="background-color: #0000ff;"   >
                          </div>
                      </div>      
                   </div>
               </form>
