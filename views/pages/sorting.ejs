  let e4 = document.getElementsByClassName("color4");
  for (var i4 = 0; i4 < e4.length; i4++) {
    e4[i4].onclick = changeColor4;
  }
  function changeColor4(e4) {
    // get the hex color
    let hex4 = e4.value;
    // set the hex color
    overlay4.style.fill = hex4;
  }
  //round
  let e5 = document.getElementsByClassName("color5");
  for (var i5= 0; i5 < e5.length; i5++) {
    e5[i5].onclick = changeColor5;
  }
  function changeColor5(e5) {
    // get the hex color
    let hex51 = e5.target.getAttribute("data-hex1");
    let hex52 = e5.target.getAttribute("data-hex2");
    let hex53 = e5.target.getAttribute("data-hex3");
    // set the hex color
    overlay5.style.fill = hex51;
    overlay6.style.fill = hex51;
  
    overlay3.style.fill = hex53;
    overlay4.style.fill = hex52;
  }
  
  //rect
  let e6 = document.getElementsByClassName("color6");
  for (var i6= 0; i6 < e6.length; i6++) {
    e6[i6].onclick = changeColor6;
  }
  function changeColor6(e6) {
    // get the hex color
    let hex61 = e6.target.getAttribute("data-hex1");
    let hex62 = e6.target.getAttribute("data-hex2");
    let hex63 = e6.target.getAttribute("data-hex3");
    // set the hex color
    overlay3.style.fill = hex61;
    overlay4.style.fill = hex61;
  
    overlay5.style.fill = hex62;
    overlay6.style.fill = hex63;
