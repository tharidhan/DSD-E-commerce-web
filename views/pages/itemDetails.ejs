    <div class="brand" >
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <% result.forEach(function(item) { %>
                    <div class="titlepage">
                        <h2><%=item.shortName%></h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="brand-bg" style="background-color:#EEE8AA">
            <div class="container">
                <div class="row">
             
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 margin">
                        <div class="brand_box">
                            <img src="../upload/<%=item.image %>" alt="img" />
               
                            <div style="margin-top:10px;">
                                <% for (var i =1; i <=item.review; i++ ) { %>
                                    <% if(item.review<1){%>
                                        <h2>ss</h2>
                                        <% } else {%>
                                            <i><img src="../images/star.png"/></i>
                                            <% } %>
                                    <% } %>
                        </div >
                            <form action="/add_to_cart" method="post">
                                <input type="hidden" name="id" value="<%= item.id%>">
                                <input type="hidden" name="shortName" value="<%= item.shortName%>">
                                <input type="hidden" name="new_price" value="<%= item.new_price%>">
                                <input type="hidden" name="sale_price" value="<%= item.sale_price%>">
                                <input type="hidden" name="quantity" value="1">
                                <input type="hidden" name="image" value="<%= item.image%>">
                                <input type="hidden" name="status" value="cart">
                                <input type="hidden" name="custermize" value="no">
                                <input type="submit" value="Add to cart" class= "btn btn-primary" style="margin-top:10px;">
                            </form>
                        </div>
                    </div>
               
                </div>
                <table>
                    <tr>
                      <th>Name</th>
                      <th><%=item.shortName%></th>
                    </tr>
                    <tr>
                      <td>Price</td>
                      <td><%=item.new_price%></td>
                    </tr>
                    <tr>
                       <td>Description</td>
